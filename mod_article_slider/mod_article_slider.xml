<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
    <name>Article Slider</name>
    <version>1.0.0</version>
    <description>Displays a horizontal scrolling list of selected articles.</description>
    <namespace path="src">OpenSAI\Article\Slider</namespace>

    <files>
        <filename module="mod_article_slider">mod_article_slider.php</filename>
        <filename>ArticleSliderHelper.php</filename>
        <filename>script.js</filename>
        <filename>style.css</filename>
        <folder>tmpl</folder>
        <folder>src</folder>   
    </files>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="article_ids"
                    type="text"
                    label="Article ID's"
                    description="Enter the IDs of the articles you want to display, separated by commas."
                    size="50"
                />
                <field
                    name="random"
                    type="checkbox"
                    label="Â¿Random Order?"
                    description="The article cards will be showed in random order?"
                    checked="0"
                />
            </fieldset>            
        </fields>
    </config>
</extension>


