        <!-- Category Selection -->
        <field
            name="category_id"
            type="sql"
            label="Select Category"
            description="Choose a category to filter articles."
            query="SELECT id AS value, title FROM #__categories WHERE extension='com_content' ORDER BY title ASC"
            default=""
            required="true"
            onChange="updateArticleList(this.value);"
        />

