<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
    <name>mod_article_slideshow</name>
    <title>Article Slideshow</title>
    <description>Horizontal slideshow of selected articles</description>
    <files>
        <filename module="mod_article_slideshow">mod_article_slideshow.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="category" type="category" label="Select Category" description="Choose the category of articles to display" />
                <field name="article_limit" type="number" label="Number of Articles" default="5" />
            </fieldset>
        </fields>
    </config>
</extension>

